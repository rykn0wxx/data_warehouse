 <% title "Login", false, false %>
 
<div class="auth login-cover login-cover--cover">
  <div class="login-cover--image" style="background-image: url(<%= image_path('login-bg-001.jpeg') %>)"></div>
  <div class="login-cover--bg"></div>
</div>

<div class="page-container fade show">
  <div class="login animated fadeIn">
    <div class="login-header">
      <div class="login-brand">
        <span class="login-logo"></span>
        <%= link_to root_path, :class => "login-link" do %>
        <b>mudHead</b>
        Admin
        <% end %>
        <small>Create your account and enjoy</small>
      </div>
      <div class="login-icon">
        <%= mi.lock %>
      </div>
    </div>
    <div class="login-content">
      <%= simple_form_for resource, :as => resource_name, :url => registration_path(resource_name), :html => { :novalidate => true } do |f| %>
        <div class="form-inputs">
          <div class="form-input-group">
            <div class="form-group form-group--block form-group--float">
              <%= f.label :email, :class => "form-label" %>
              <%= f.input_field :email,
                :required => true,
                :autofocus => false,
                :autocomplete => "off",
                :class => "form-control form-control-lg",
                :data => { :'form-input' => "float" } %>
              <i class="form-group__bar"></i>
            </div>
          </div>
          <div class="form-input-group">
            <div class="form-group form-group--block form-group--float">
              <%= f.label :username, :class => "form-label" %>
              <%= f.input_field :username,
                :required => true,
                :autofocus => false,
                :autocomplete => "off",
                :class => "form-control form-control-lg",
                :data => { :'form-input' => "float" } %>
              <i class="form-group__bar"></i>
            </div>
          </div>
          <div class="form-input-group">
            <div class="form-group form-group--block form-group--float">
              <%= f.label :password, :class => "form-label" %>
              <%= f.input_field :password,
                :as => :password,
                :required => true,
                :autofocus => false,
                :autocomplete => "off",
                :class => "form-control form-control-lg",
                :data => { :'form-input' => "float" } %>
              <i class="form-group__bar"></i>
            </div>
          </div>
          <div class="form-input-group">
            <div class="form-group form-group--block form-group--float">
              <%= f.label :password_confirmation, :class => "form-label" %>
              <%= f.input_field :password_confirmation,
                :as => :password,
                :required => true,
                :autofocus => false,
                :autocomplete => "off",
                :class => "form-control form-control-lg",
                :data => { :'form-input' => "float" } %>
              <i class="form-group__bar"></i>
            </div>
          </div>
        </div>
        <div class="login-buttons">
          <%= f.button :submit, "Log in", :class => "btn btn-dark btn-raised btn-block" %>
        </div>
      <% end %>
      <p class="login-footer">
        Already have an account?
        <%= link_to "Sign In", new_session_path(resource_name) %>
      </p>
    </div>
  </div>
</div>